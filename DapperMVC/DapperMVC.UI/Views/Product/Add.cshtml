@model Product
@{
}

<h3>Add Product</h3>

<a href="/Product/DisplayAll" class="my-2 btn btn-primary">Display All</a>

<form asp-action="Add">

    <div class="mb-3">
        <label asp-for="ProductName" class="form-label">ProductName</label>
        <input asp-for="ProductName" type="text" class="form-control">

        <span class="text-danger" asp-validation-for="ProductName"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ProductDesc" class="form-label">ProductDesc</label>
        <input asp-for="ProductDesc" type="text" class="form-control">

        <span class="text-danger" asp-validation-for="ProductDesc"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Price" class="form-label">Price</label>
        <input asp-for="Price" type="text" class="form-control">

        <span class="text-danger" asp-validation-for="Price"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Qty" class="form-label"> Qty</label>
        <input asp-for="Qty" type="text" class="form-control">

        <span class="text-danger" asp-validation-for="Qty"></span>
    </div>

    @if (TempData["msg"] != null)
    {
        <div class="mb-3">
            @TempData["msg"]
        </div>
    }

    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Save</button>
    </div>

</form>